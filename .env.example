# Required: image to deploy (pinned release tag)
LOCAL_SCRIBE_IMAGE=ghcr.io/frank-dutmers/local-scribe:v0.1.0

# Host output directory for job artifacts
HOST_JOBS_DIR=./jobs

# Host port mapping
HOST_PORT=8080

# Optional: leave blank to auto-detect current user ID/group in deploy.sh
LOCAL_UID=
LOCAL_GID=

# Runtime pathing (default matches baked-cache image layout)
TRANSCRIBE_MODELS_ROOT=/opt/hf-home/hub

# Health-check wait budget (seconds)
HEALTH_TIMEOUT_SECONDS=90
